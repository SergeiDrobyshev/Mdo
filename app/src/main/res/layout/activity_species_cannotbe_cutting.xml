<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    tools:context=".SpeciesCannotbeCutting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_onclickSpecies"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/poroda"
            android:textSize="@dimen/textview_textsize" />


        <TextView
            android:id="@+id/textview_onclickSpecies_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"
            android:textColor="@color/primary_text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_view_of_testes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/view_of_testes"
            android:textSize="@dimen/textview_textsize" />

        <Spinner
            android:id="@+id/spinner_view_of_testes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:gravity="bottom"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_diameter_testes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dimeter_tree"
            android:textSize="@dimen/textview_textsize" />


        <EditText
            android:id="@+id/editText_diameter_testes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:inputType="number"
            android:textSize="@dimen/textview_textsize"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_amount_testes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/amount_testes"
            android:textSize="@dimen/textview_textsize" />


        <EditText
            android:id="@+id/editText_amount_testes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:gravity="bottom"
            android:inputType="number"
            android:textSize="@dimen/textview_textsize"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_number_testes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/number_testes"
            android:textSize="@dimen/textview_textsize" />


        <EditText
            android:id="@+id/editText_number_testes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:gravity="bottom"
            android:inputType="number"
            android:textSize="@dimen/textview_textsize"
            />
    </LinearLayout>

    <Button
        android:id="@+id/add_testes"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:text="@string/add"
        android:textSize="@dimen/button_textsize"
        android:layout_width="@dimen/layout_width_button"
        android:layout_height="@dimen/layout_height2"
        android:onClick="onClick"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Вид семенников"
            android:textSize="@dimen/textview_textsize_table"/>

        <TextView
            android:layout_width="@dimen/layout_width_column_perechet"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Диаметр"
            android:textSize="@dimen/textview_textsize_table" />

        <TextView
            android:layout_width="@dimen/layout_width_column_perechet"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Кол-во"
            android:textSize="@dimen/textview_textsize_table" />

        <TextView
            android:layout_width="@dimen/layout_width_column_perechet"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Номера"
            android:textSize="@dimen/textview_textsize_table"/>
    </LinearLayout>


        <ListView
            android:id="@+id/listview_every_wood_cannot_be_cutting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            tools:listitem="@layout/list_item_cannot_be_cutting"
            android:layout_marginBottom="@dimen/layout_margin_bottom"
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true">
        </ListView>

</LinearLayout>
</ScrollView>