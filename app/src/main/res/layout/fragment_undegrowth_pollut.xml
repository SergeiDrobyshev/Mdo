<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/undergrowth"
        android:textSize="@dimen/textview_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/marginTop">
        <TextView
            android:id="@+id/poroda_value1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:gravity="center"
            android:text="@string/poroda"
            android:textSize="@dimen/textview_textsize" />

        <Spinner
            android:id="@+id/spinner_poroda_value1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amount_thousand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/amount_thousand"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_amount_thousand"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/preservation_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/preservation_area"
                android:textSize="@dimen/textview_textsize" />

            <EditText
                android:id="@+id/editText_preservation_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/marginLeft"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/marginLeft"
                android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/structure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:text="@string/sostav"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_structure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_view_line"
        android:layout_marginTop="@dimen/marginTop"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/pollution"
        android:layout_marginTop="@dimen/marginTop"
        android:textSize="@dimen/textview_textsize"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:text="@string/radiation_report"
        android:layout_marginTop="@dimen/marginTop"
        android:textSize="@dimen/textview_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_number_report"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:text="@string/number_report"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_number_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_date_report"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:text="@string/date_report"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_date_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_radiation_pollution_density"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/radiation_pollution_density"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_radiation_pollution_density"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <TextView
        android:id="@+id/specific_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:text="@string/specific_activity"
        android:layout_marginTop="@dimen/marginTop"
        android:textSize="@dimen/textview_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_specific_activity_del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/specific_activity_del"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_specific_activity_del"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_specific_activity_drov"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/specific_activity_drov"
            android:textSize="@dimen/textview_textsize" />

        <EditText
            android:id="@+id/editText_specific_activity_drov"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_marginStart="@dimen/marginLeft"
            android:layout_marginLeft="@dimen/marginLeft"
            android:textSize="@dimen/textview_textsize"/>
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_view_line"
        android:layout_marginTop="@dimen/marginTop"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/save_undergrowth-and_pollution"
        android:layout_width="@dimen/layout_width_button_save"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_marginBottom="36dp"
        android:padding="@dimen/button_padding"
        android:text="@string/save_mdo"
        android:textSize="@dimen/button_textsize" />

</LinearLayout>
</ScrollView>