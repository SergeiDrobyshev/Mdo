<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_view_of_testes"
        android:layout_width="0dp"
        android:layout_height="@dimen/spinner_dropdown_item_height"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="@dimen/textview_textsize_table" />

    <TextView
        android:id="@+id/list_deiameter_testes"
        android:layout_width="@dimen/layout_width_column_perechet"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/textview_textsize_table"/>

    <TextView
        android:id="@+id/list_amount_testes"
        android:layout_width="@dimen/layout_width_column_perechet"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/textview_textsize_table"/>

    <TextView
        android:id="@+id/list_number_testes"
        android:layout_width="@dimen/layout_width_column_perechet"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/textview_textsize_table"/>

</LinearLayout>
